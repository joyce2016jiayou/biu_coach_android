<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

    <com.noplugins.keepfit.coachplatform.util.ui.NoScrollViewPager
            android:id="@+id/viewpager_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="48dp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bottom_bg"
            android:orientation="horizontal">

        <RelativeLayout
                android:id="@+id/btn_home"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/home_img"
                    android:layout_width="30dp"
                    android:layout_height="31dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/m6"
                    android:src="@drawable/icon_home_on"/>

            <TextView
                    android:id="@+id/home_name"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/home_img"
                    android:layout_width="30dp"
                    android:gravity="center"
                    android:textSize="9sp"
                    android:textColor="@color/btn_text_color"
                    android:text="@string/find"/>


        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/btn_shipu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/shipu_img"
                    android:layout_width="30dp"
                    android:layout_height="31dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/m6"
                    android:src="@drawable/icon_discover_off"/>

            <TextView
                    android:id="@+id/shipu_name"
                    android:textColor="@color/contents_text"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/shipu_img"
                    android:layout_width="30dp"
                    android:gravity="center"
                    android:textSize="9sp"
                    android:text="@string/date_table"/>

        </RelativeLayout>


        <RelativeLayout
                android:id="@+id/btn_movie"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/movie_img"
                    android:layout_width="30dp"
                    android:layout_height="31dp"
                    android:layout_marginTop="@dimen/m6"
                    android:src="@drawable/icon_issue_off"/>

            <TextView
                    android:id="@+id/movie_name"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/movie_img"
                    android:layout_width="30dp"
                    android:gravity="center"
                    android:textSize="9sp"
                    android:textColor="@color/contents_text"
                    android:text="@string/message"/>


            <LinearLayout
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="-10dp"
                    android:layout_toRightOf="@+id/movie_img"
                    android:background="@drawable/circle_bg"
                    android:visibility="gone"
                    android:gravity="center">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="99+"
                        android:textStyle="normal"
                        android:textColor="@color/white"
                        android:textSize="11sp"/>

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/btn_mine"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/mine_img"
                    android:layout_width="30dp"
                    android:layout_height="31dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/m6"
                    android:src="@drawable/icon_user_off"/>

            <TextView
                    android:id="@+id/mine_name"
                    android:textColor="@color/contents_text"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mine_img"
                    android:layout_width="30dp"
                    android:gravity="center"
                    android:textSize="9sp"
                    android:text="@string/my_info"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
